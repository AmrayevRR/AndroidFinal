<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/country_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="Country"
        android:textSize="22sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/confirmed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/country_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Confirmed:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/confirmed_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/confirmed_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/confirmed_text_view"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/deaths_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirmed_data_text_view"
        app:layout_constraintStart_toStartOf="@id/confirmed_text_view"
        android:layout_marginTop="10dp"
        android:text="Deaths:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deaths_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/deaths_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/deaths_text_view"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/recovered_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deaths_data_text_view"
        app:layout_constraintStart_toStartOf="@id/confirmed_text_view"
        android:layout_marginTop="10dp"
        android:text="Recovered:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recovered_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/recovered_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/recovered_text_view"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/active_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recovered_data_text_view"
        app:layout_constraintStart_toStartOf="@id/confirmed_text_view"
        android:layout_marginTop="10dp"
        android:text="Active:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/active_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/active_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/active_text_view"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>